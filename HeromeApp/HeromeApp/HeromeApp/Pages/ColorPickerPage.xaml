<?xml version="1.0" encoding="utf-8" ?>
<forms:AnimationPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeromeApp.Pages.ColorPickerPage"
             xmlns:forms="clr-namespace:FormsControls.Base;assembly=FormsControls.Base"
             xmlns:shape="clr-namespace:XFShapeView;assembly=XFShapeView"
             BackgroundImage="background_nails"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout Padding="30,10,30,40" Spacing="10">
            <!-- The navigation bar -->
            <StackLayout
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"
                Orientation="Vertical"         
                Spacing="20">
                <StackLayout 
                    Orientation="Horizontal" 
                    HorizontalOptions="Fill" 
                    VerticalOptions="Fill">
                    <Image HorizontalOptions="CenterAndExpand"
                           Source="logo_white"
                           HeightRequest="50"/>
                    <Image HorizontalOptions="End" 
                           VerticalOptions="End"
                        Source="icon_menu" 
                        HeightRequest="20"/>
                </StackLayout>

                <BoxView
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="White"
                    HeightRequest="1"/>
            </StackLayout>

            <!-- The body -->
            <StackLayout
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Orientation="Vertical">

                <Label 
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"
                    Text="Welkom bij de nagellak colorpicker"
                    LineBreakMode="WordWrap"
                    TextColor="White"
                    FontFamily="{StaticResource OpenSans-Regular}"
                    FontSize="Small"/>
                <Label 
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"
                    Text="Maak hieronder uw keuze."
                    TextColor="White"
                    FontFamily="{StaticResource OpenSans-Regular}"
                    FontSize="Small"
                    TranslationY="-10"/>

                <StackLayout
                    Orientation="Horizontal"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="StartAndExpand"
                    HeightRequest="70"
                    Spacing="20">
                    <Image HorizontalOptions="FillAndExpand" Source="icon_skintype" x:Name="imgSkinType"/>
                    <Image HorizontalOptions="FillAndExpand" Source="icon_nail_length" x:Name="imgNailLength"/>
                    <Image HorizontalOptions="FillAndExpand" Source="icon_nail_skintype" x:Name="imgNailType"/>
                    <Image HorizontalOptions="FillAndExpand" Source="icon_nail_color" x:Name="imgNailColor"/>
                </StackLayout>


                <StackLayout Padding="0">
                    <shape:ShapeView 
                    x:Name="menuArrow"
                    ShapeType="Triangle" 
                    Color="White" 
                    WidthRequest="45" 
                    HeightRequest="45"
                    HorizontalOptions="Start"
                    VerticalOptions="End"
                    Scale="0"
                    TranslationY="10"/>
                    <Grid
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image 
                        Grid.Row="0" 
                        Grid.Column="0"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="EndAndExpand"
                        Scale="2"
                        TranslationX="-120"
                        TranslationY="100"
                        Rotation="55"
                        Source="hand"
                        />


                        <!-- The menu for editing settings -->
                        <Frame
                        x:Name="menuBox"
                        Scale="0"
                        IsEnabled="False"
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="0">

                            <Grid
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            Padding="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- The skintype menu-->
                                <Frame
                                x:Name="menuSkinType"
                                Grid.Row="0"
                                Grid.Column="0"
                                IsEnabled="False"
                                Opacity="0"
                                HasShadow="False"
                                Padding="8">

                                    <StackLayout Padding="0" Spacing="15">
                                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <BoxView 
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            BackgroundColor="#405f8d"
                                            CornerRadius="5"/>
                                            <Label        
                                            Margin="5"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontSize="Small"
                                            FontFamily="{StaticResource OpenSans-Bold}"
                                            TextColor="White"
                                            Text="Selecteer hieronder de juiste skintone."
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center"/>
                                        </Grid>
                                        <Label 
                                        Text="Dark skin"
                                        FontFamily="{StaticResource OpenSans-Bold}"
                                        TextColor="#405f8d"
                                        Margin="10,0,0,0"/>
                                        <BoxView Color="#405f8d" HorizontalOptions="Fill" VerticalOptions="Center" HeightRequest="3"/>
                                        <Label 
                                        Text="Light skin"
                                        FontFamily="{StaticResource OpenSans-Bold}"
                                        TextColor="#405f8d"
                                        Margin="10,0,0,0"/>
                                        <BoxView Color="#405f8d" HorizontalOptions="Fill" VerticalOptions="Center" HeightRequest="3"/>
                                        <Label 
                                        Text="Europe"
                                        FontFamily="{StaticResource OpenSans-Bold}"
                                        TextColor="#405f8d"
                                        Margin="10,0,0,0"/>
                                        <BoxView Color="#405f8d" HorizontalOptions="Fill" VerticalOptions="Center" HeightRequest="3"/>
                                        <Label 
                                        Text="East Asia"
                                        FontFamily="{StaticResource OpenSans-Bold}"
                                        TextColor="#405f8d"
                                        Margin="10,0,0,0"/>
                                    </StackLayout>
                                </Frame>

                                <!-- The nail length menu-->
                                <Frame
                                x:Name="menuNailLength"
                                Grid.Row="0"
                                Grid.Column="0"
                                IsEnabled="False"
                                Opacity="0"
                                BackgroundColor="Green">
                                </Frame>

                                <!-- The nail type menu-->
                                <Frame
                                x:Name="menuNailType"
                                Grid.Row="0"
                                Grid.Column="0"
                                IsEnabled="False"
                                Opacity="0"
                                BackgroundColor="Blue">
                                </Frame>

                                <!-- The nail color menu -->
                                <Frame
                                x:Name="menuNailColor"
                                Grid.Row="0"
                                Grid.Column="0"
                                IsEnabled="False"
                                Opacity="0"
                                HasShadow="False"
                                Padding="8">

                                    <StackLayout Padding="0" Spacing="15">
                                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <BoxView 
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            BackgroundColor="#405f8d"
                                            CornerRadius="5"/>
                                            <Label        
                                            Margin="5"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontSize="Small"
                                            FontFamily="{StaticResource OpenSans-Bold}"
                                            TextColor="White"
                                            Text="Selecteer hieronder de juiste kleur."
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center"/>
                                        </Grid>


                                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Row 0 -->
                                            <shape:ShapeView
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            ShapeType="Circle"
                                            Color="Red"/>
                                            <shape:ShapeView
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            ShapeType="Circle"
                                            Color="Green"/>
                                            <shape:ShapeView
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            ShapeType="Circle"
                                            Color="Blue"/>
                                            <shape:ShapeView
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            ShapeType="Circle"
                                            Color="Purple"/>

                                            <!-- Row 1 -->
                                            <shape:ShapeView
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            ShapeType="Circle"
                                            Color="Red"/>
                                            <shape:ShapeView
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            ShapeType="Circle"
                                            Color="Green"/>
                                            <shape:ShapeView
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            ShapeType="Circle"
                                            Color="Blue"/>
                                            <shape:ShapeView
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            ShapeType="Circle"
                                            Color="Purple"/>

                                            <!-- Row 2 -->
                                            <shape:ShapeView
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            ShapeType="Circle"
                                            Color="Red"/>
                                            <shape:ShapeView
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            ShapeType="Circle"
                                            Color="Green"/>
                                            <shape:ShapeView
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            ShapeType="Circle"
                                            Color="Blue"/>
                                            <shape:ShapeView
                                            Grid.Row="2"
                                            Grid.Column="3"
                                            ShapeType="Circle"
                                            Color="Purple"/>

                                            <!-- Row 3 -->
                                            <shape:ShapeView
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            ShapeType="Circle"
                                            Color="Red"/>
                                            <shape:ShapeView
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            ShapeType="Circle"
                                            Color="Green"/>
                                            <shape:ShapeView
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            ShapeType="Circle"
                                            Color="Blue"/>
                                            <shape:ShapeView
                                            Grid.Row="3"
                                            Grid.Column="3"
                                            ShapeType="Circle"
                                            Color="Purple"/>
                                        </Grid>



                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </Frame>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</forms:AnimationPage>